<div class="container p-4">
  <div class="row">

    {{#each movies}}
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <a href="{{url}}" target="_blank">
              <h3 class="card-title text-uppercase">{{title}}</h3>
            </a>
            <p class="m-2">{{description}}</p>
            <p>{{timeago created_at}}</p>
            <a href="/movies/delete/{{id}}" class="btn btn-danger">Eliminar</a>
            <a href="/movies/edit/{{id}}" class="btn btn-secondary">Editar</a>
          </div>

        </div>

      </div>
    {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body test-center">
          <p>No tienes pel√≠culas agregadas</p>
          <a href="/movies/add">Agrega una!</a>

        </div>

      </div>
    {{/each}}

  </div>

</div>
