<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/movies/edit/{{movie.id}}" method="POST">
            <div class="form-group">
              <input type="text" value="{{movie.title}}" name="title" class="form-control" placeholder="Título de la película" autofocus>
            </div>
            <div class="form-group">
              <input type="url" value="{{movie.url}}" name="url" class="form-control" placeholder="Enlace a la película">
            </div>
            <div class="form-group">
              <textarea name="description" rows="2" class="form-control" placeholder="Descripción o sinopsis">{{movie.description}}</textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">Guardar</button>
            </div>
          </form>

        </div>

      </div>

    </div>

  </div>
</div>
